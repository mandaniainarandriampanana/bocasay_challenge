{% extends "base.html.twig" %}

{% trans_default_domain "FOSUserBundle" %}
{% block content %}
    <div class="row">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" name="_username" id="username" type="text" value="{{ last_username }}" required="required" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" name="_password" id="password" type="password" value="" required="required">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                </label>
                            </div>
                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <a href="{{ path("fos_user_registration_register") }}">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a>
                    </form>
                    </div>
                </div>
            </div>    
        </div>          
{% endblock content %}
