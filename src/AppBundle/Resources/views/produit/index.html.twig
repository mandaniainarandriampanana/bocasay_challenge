{% extends 'base_admin.html.twig' %}

{% block blanc %}Produits list{% endblock %}
{% block underblanc %}
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Prixttc</th>
                <th>Genre</th>
                <th>Types</th>
                <th>Fournisseur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr class="gradeA">
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.prixTtc }}</td>
                <td>{{ produit.getGenre.getLibelle }}</td>
                <td>{{ produit.getTypes.getLibelle }}</td>
                <td>{{ produit.getFournisseur.getMarque }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'id': produit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">Create a new produit</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}
