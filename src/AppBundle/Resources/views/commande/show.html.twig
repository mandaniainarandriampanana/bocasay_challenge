{% extends 'base_admin.html.twig' %}

{% block blanc %}Commande{% endblock %}
{% block underblanc %}
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Somme</th>
                <td>{{ commande.somme }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ commande.getUser.getUsername }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ commande.getUser.getUserFamillyName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ commande.getUser.getEmail }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.getDate|date('d/m/y') }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>
<div class="col-lg-12">
    <h3 class="page-header">Produits Dans la Commande</h3>
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Prixttc</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in commande.getProduit %}
            <tr class="gradeA">
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.prixTtc }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    <ul>
        <li>
            <a href="{{ path('commande_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('commande_edit', { 'id': commande.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
