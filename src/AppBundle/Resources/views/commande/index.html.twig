{% extends 'base_admin.html.twig' %}

{% block blanc %}liste Commande{% endblock %}
{% block underblanc %}
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Somme</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Somme ttc</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr class="gradeA">
                <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{{ commande.somme }}</td>
                <td>{{ commande.getUser.getUsername }}</td>
                <td>{{ commande.getUser.getUserFamillyName }}</td>
                <td>{{ commande.getUser.getEmail }}</td>
                <td>{{ commande.getSomme }}</td>
                <td>{{ commande.getDate|date('d/m/y') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commande_show', { 'id': commande.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commande_edit', { 'id': commande.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commande_new') }}">Create a new commande</a>
        </li>
    </ul>
</div>
</div>
{% endblock %}
